<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8FCFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="267dp"
            android:layout_height="207dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo_cesta_virtual" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Usuario"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_700"
                android:inputType="textPersonName"
                android:textColor="@color/blue_700" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Contraseña"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/blue_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_700"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/blue_700" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_advertise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:drawableTint="#FF0000"
            android:textAlignment="center"
            android:textColor="#FF0303"
            android:textStyle="bold"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_baseline_warning_24"
            tools:text="Texto de prueba" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/yellow"
            android:text="Recuérdame"
            android:textColor="@color/blue_700" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_login"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:outlineAmbientShadowColor="#514D4D"
            android:outlineProvider="background"
            android:outlineSpotShadowColor="#4E4747"
            android:paddingHorizontal="20dp"
            android:shadowColor="#4E4B4B"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:soundEffectsEnabled="true"
            android:text="Iniciar sesión"
            android:textColor="@color/yellow"
            app:cornerRadius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="¿No tienes cuenta?"
                android:textAlignment="textEnd"
                android:textColor="@color/blue_700" />

            <Button
                android:id="@+id/btn_registrarse_login"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Registrarse"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/blue_500"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>