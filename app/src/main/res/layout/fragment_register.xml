<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_azul"
    tools:context=".register.register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/logo_app" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Nombre y Apellidos"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/blue_700" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Correo Electrónico"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/blue_700"
            android:textColor="@color/blue_700" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Nombre usuario"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeErrorColor="#FF0000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:errorContentDescription="Ese usuario ya esiste"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_700"
                android:inputType="textPersonName"
                android:textColor="@color/blue_700" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Contraseña"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/blue_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_700"
                android:inputType="textPassword"
                android:textColor="@color/blue_700" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="Repite contraseña"
            android:textColorHint="@color/blue_500"
            app:boxStrokeColor="@color/blue_500"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:expandedHintEnabled="true"
            app:hintAnimationEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/blue_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password_register2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_700"
                android:inputType="textPassword"
                android:textColor="@color/blue_700" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_caution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Rellene todos los campos"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:visibility="gone" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/boton_registrarse"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="20dp"
            android:shadowColor="#4E4B4B"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:soundEffectsEnabled="true"
            android:text="Registrarse"
            android:textColor="@color/yellow"
            app:cornerRadius="8dp" />

    </LinearLayout>
</FrameLayout>